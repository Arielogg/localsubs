# Audio device index (-1 for system default)
# Run `python test_audio.py` to find the correct index
AUDIO_DEVICE_INDEX=-1

# Whisper model size
# Options: tiny, base, small, medium, large-v3
# VRAM: tiny ~1GB, small ~2GB, medium ~5GB, large-v3 ~10GB
# Recommendation: "small" for 6GB VRAM, "medium" if you have headroom
WHISPER_MODEL=small

# Compute device and precision
WHISPER_DEVICE=cuda
WHISPER_COMPUTE_TYPE=float16

# VAD settings (milliseconds)
MIN_SILENCE_DURATION_MS=500
MIN_SPEECH_DURATION_MS=250
MAX_CHUNK_DURATION_S=15

# Server settings
HOST=0.0.0.0
PORT=8000

# Display settings
SUBTITLE_MAX_CHARS=120
SUBTITLE_DISPLAY_TIME_S=5.0

# Word-by-word streaming mode (for maximum responsiveness)
# Set to 'true' to enable word-by-word streaming instead of phrase-by-phrase
WORD_BY_WORD_MODE=false
# Number of words to group together in word-by-word mode (1-5 recommended)
WORDS_PER_SUBTITLE=3
